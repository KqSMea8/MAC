# vim:set noet sw=4 sts=4 ts=8:
[user]
	email = 316786359@qq.com
	name = solawing
[diff]
	tool = nvim
	guitool = mvim
[difftool "mvim"]
	cmd = . ~/bin/mvimdiff.sh
[difftool "nvim"]
	cmd = . ~/bin/nvimdiff.sh
[difftool]
	prompt = false
	trustExitCode = true
[alias]
	b = blame
	c = config
	d = diff
	f = fetch
	m = merge
	mf = merge fetch_head
	p = push
	r = remote
	br = branch
	s = status
        la = log --simplify-merges
	stat-commit = shortlog --no-merges
	stat-line = !sh ~/bin/git-stat-line.sh
[push]
	default = simple
[merge]
	tool = mvim
	guitool = mvim
[mergetool]
	prompt = false
[mergetool "mvim"]
	cmd = mvim -f -d $LOCAL $BASE $REMOTE $MERGED -c \"winc b | winc J | winc = | diffoff \"
[mergetool "nvim"]
	cmd = nvim -d $LOCAL $BASE $REMOTE $MERGED -c \"winc b | winc J | winc = | diffoff \"
[rebase]
	autoStash = true
[core]
	quotepath = false
[grep]
	patternType = perl
[rerere]
	enabled = true
